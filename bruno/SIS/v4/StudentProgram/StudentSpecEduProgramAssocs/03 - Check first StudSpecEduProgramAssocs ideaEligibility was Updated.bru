meta {
  name: 03 - Check first StudSpecEduProgramAssocs ideaEligibility was Updated
  type: http
  seq: 3
}

get {
  url: {{resourceBaseUrl}}/ed-fi/studentSpecialEducationProgramAssociations/{{firstStudSpecEduProgramAssocsUniqueId}}
  body: none
  auth: inherit
}

assert {
  res.status: eq 200
  res.body: isDefined
  res.body.id: isString
  res.body.id: isNotEmpty
  res.body.ideaEligibility: isDefined
}

script:pre-request {
  const { validateDependency } = require('./utils');

  validateDependency(bru, 'firstStudSpecEduProgramAssocsUniqueId', '01 - Check first StudSpecEduProgramAssocs is valid', {
    actionHint: 'Ensure you ran the first certification scenario successfully before continuing.'
  });
  validateDependency(bru, 'firstStudSpecEduProgramAssocsIdeaEligibility', '01 - Check first StudSpecEduProgramAssocs is valid', {
    actionHint: 'Ensure you ran the first certification scenario successfully before continuing.'
  });
}

script:post-response {
  const { getVar, expectChanged, throwNotFoundOrSpecificError } = require('./utils');
  const { logSpecStudSpecEduProgramAssocs, logScenario } = require('./logging');
  const entityName = 'StudSpecEduProgramAssocs';
  const scenarioName = this.req.name;
  
  if (res.status !== 200 || !res.body) {
    throwNotFoundOrSpecificError(entityName);
  }

  const current = res.getBody();
  const previousIdeaEligibility = getVar(bru, 'firstStudSpecEduProgramAssocsIdeaEligibility');
  
  expectChanged(previousIdeaEligibility, current.ideaEligibility, 'ideaEligibility');
  
  logScenario(entityName, scenarioName, current, logSpecStudSpecEduProgramAssocs, [
    'beginDate',
    'educationOrganizationId',
    'programEducationOrganizationId',
    'programName',
    'programTypeDescriptor',
    'studentUniqueId',
    'specialEducationSettingDescriptor'
  ]);
}

settings {
  encodeUrl: true
  timeout: 0
}
