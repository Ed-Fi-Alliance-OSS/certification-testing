}

assert {
  res.status: eq 200
  res.body: isDefined
  res.body.id: isString
  res.body.id: isNotEmpty
  res.body.neglectedOrDelinquentProgramServices: isArray
  res.body.neglectedOrDelinquentProgramServices: isNotEmpty
  res.body.neglectedOrDelinquentProgramServices[0].neglectedOrDelinquentProgramServiceDescriptor: isString
  res.body.neglectedOrDelinquentProgramServices[0].neglectedOrDelinquentProgramServiceDescriptor: isNotEmpty
