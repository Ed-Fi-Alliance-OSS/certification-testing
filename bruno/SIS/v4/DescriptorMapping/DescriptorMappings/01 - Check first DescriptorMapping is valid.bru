meta {
  name: 01 - Check first DescriptorMapping is valid
  type: http
  seq: 1
}

get {
  url: {{resourceBaseUrl}}/ed-fi/descriptorMappings?mappedNamespace={{firstMappedNamespaceEncoded}}&namespace={{firstNamespaceEncoded}}&mappedValue=[ENTER FIRST MAPPED VALUE]&value=[ENTER FIRST VALUE]&mappedNamespace_KEEP_IT_AT_THE_END=[ENTER FIRST MAPPED NAMESPACE]&namespace_KEEP_IT_AT_THE_END=[ENTER FIRST NAMESPACE]
  body: none
  auth: inherit
}

params:query {
  mappedNamespace: {{firstMappedNamespaceEncoded}}
  namespace: {{firstNamespaceEncoded}}
  mappedValue: [ENTER FIRST MAPPED VALUE]
  value: [ENTER FIRST VALUE]
  mappedNamespace_KEEP_IT_AT_THE_END: [ENTER FIRST MAPPED NAMESPACE]
  namespace_KEEP_IT_AT_THE_END: [ENTER FIRST NAMESPACE]
}

assert {
  res.status: eq 200
  res.body: isArray
  res.body: isNotEmpty
  res.body[0].id: isString
  res.body[0].id: isNotEmpty
  res.body[0].value: isString
  res.body[0].value: isNotEmpty
  res.body[0].namespace: isString
  res.body[0].namespace: isNotEmpty
  res.body[0].mappedValue: isString
  res.body[0].mappedValue: isNotEmpty
  res.body[0].mappedNamespace: isString
  res.body[0].mappedNamespace: isNotEmpty
}

script:pre-request {
  const { encodeDescriptorParameter, setVar } = require('./utils');

  const mappedNamespaceEncoded = encodeDescriptorParameter(req.url, 'mappedNamespace_KEEP_IT_AT_THE_END');
  const namespaceEncoded = encodeDescriptorParameter(req.url, 'namespace_KEEP_IT_AT_THE_END');

  setVar(bru, 'firstMappedNamespaceEncoded', mappedNamespaceEncoded);
  setVar(bru, 'firstNamespaceEncoded', namespaceEncoded);
}

script:post-response {
  const { pickSingle, setVars, wipeVars } = require('./utils');
  const { logScenario, logSpecDescriptorMapping } = require('./logging');
  const entityName = 'DescriptorMapping';
  const scenarioName = this.req.name;
  const single = pickSingle(res.getBody());

  if (!single) {
    wipeVars(bru, [
      'firstDescriptorMappingUniqueId'
    ], entityName, true);
  }

  setVars(bru, {
    firstDescriptorMappingUniqueId: single.id
  }, entityName);

  logScenario(entityName, scenarioName, single, logSpecDescriptorMapping);
}

settings {
  encodeUrl: false
  timeout: 0
}
