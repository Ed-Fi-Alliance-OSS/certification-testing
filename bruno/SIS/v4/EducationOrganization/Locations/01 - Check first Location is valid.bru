meta {
  name: 01 - Check first Location is valid
  type: http
  seq: 1
}

get {
  url: {{resourceBaseUrl}}/ed-fi/locations?schoolId=[ENTER FIRST SCHOOL ID]&classroomIdentificationCode=[ENTER FIRST CLASSROOM IDENTIFICATION CODE]
  body: none
  auth: inherit
}

params:query {
  schoolId: [ENTER FIRST SCHOOL ID]
  classroomIdentificationCode: [ENTER FIRST CLASSROOM IDENTIFICATION CODE]
}

assert {
  res.status: eq 200
  res.body: isArray
  res.body: isNotEmpty
  res.body[0].id: isString
  res.body[0].id: isNotEmpty
  res.body[0].classroomIdentificationCode: isString
  res.body[0].classroomIdentificationCode: isNotEmpty
  res.body[0].schoolReference: isDefined
  res.body[0].schoolReference.schoolId: isNumber
  res.body[0].schoolReference.schoolId: neq 0
  res.body[0].maximumNumberOfSeats: isNumber
  res.body[0].maximumNumberOfSeats: neq 0
}

script:post-response {
  const { pickSingle, setVars, wipeVars } = require('./utils');
  const { logSpecLocation, logScenario } = require('./logging');
  const entityName = 'Location';
  const scenarioName = this.req.name;
  const entity = pickSingle(res.getBody());

  if (!entity) {
    wipeVars(bru, [
      'firstLocationUniqueId','firstLocationId','firstLocationMaximumNumberOfSeats'
    ], entityName, true);
  }

  setVars(bru, {
    firstLocationUniqueId: entity.id,
    firstLocationId: entity.classroomIdentificationCode,
    firstLocationMaximumNumberOfSeats: entity.maximumNumberOfSeats
  });
  logScenario(entityName, scenarioName, entity, logSpecLocation);
}

settings {
  encodeUrl: true
}
