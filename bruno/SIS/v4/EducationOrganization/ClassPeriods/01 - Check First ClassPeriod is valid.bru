meta {
  name: 01 - Check first ClassPeriod is valid
  type: http
  seq: 1
}

get {
  url: {{resourceBaseUrl}}/ed-fi/classPeriods?schoolId=[ENTER SCHOOL ID]&classPeriodName=[ENTER FIRST CLASS PERIOD NAME]
  body: none
  auth: inherit
}

params:query {
  schoolId: [ENTER SCHOOL ID]
  classPeriodName: [ENTER FIRST CLASS PERIOD NAME]
}

assert {
  res.status: eq 200
  res.body: isArray
  res.body: isNotEmpty
  res.body[0].id: isString
  res.body[0].id: isNotEmpty
  res.body[0].classPeriodName: isString
  res.body[0].classPeriodName: isNotEmpty
  res.body[0].schoolReference: isDefined
  res.body[0].schoolReference.schoolId: isNumber
  res.body[0].schoolReference.schoolId: neq 0
  res.body[0].meetingTimes: isArray
  res.body[0].meetingTimes: isNotEmpty
  res.body[0].meetingTimes[0].startTime: isString
  res.body[0].meetingTimes[0].startTime: isNotEmpty
  res.body[0].meetingTimes[0].endTime: isString
  res.body[0].meetingTimes[0].endTime: isNotEmpty
}

script:post-response {
  const { pickSingle, setVars, wipeVars } = require('./utils');
  const { logSpecClassPeriod, logScenario } = require('./logging');
  const scenarioName = this.req.name;
  const entityName = 'ClassPeriod';
  const single = pickSingle(res.getBody());
  
  if (!single) {
    wipeVars(bru, ['firstClassPeriodUniqueId','firstClassPeriodId','firstClassPeriodClassPeriodName','firstClassPeriodStartTime'], entityName, true);
  }
  
  setVars(bru, {
    firstClassPeriodUniqueId: single.id,
    firstClassPeriodId: single.classPeriodName,
    firstClassPeriodClassPeriodName: single.classPeriodName,
    firstClassPeriodStartTime: single.meetingTimes && single.meetingTimes[0] ? single.meetingTimes[0].startTime : undefined
  }, entityName);
  logScenario(entityName, scenarioName, single, logSpecClassPeriod);
}

settings {
  encodeUrl: true
  timeout: 0
}
