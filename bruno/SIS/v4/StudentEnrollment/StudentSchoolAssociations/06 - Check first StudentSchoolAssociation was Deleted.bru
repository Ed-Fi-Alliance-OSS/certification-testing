meta {
  name: 06 - Check first StudentSchoolAssociation was Deleted
  type: http
  seq: 6
}

get {
  url: {{resourceBaseUrl}}/ed-fi/studentSchoolAssociations/{{firstStudentSchoolAssociationUniqueId}}
  body: none
  auth: inherit
}

assert {
  res.status: eq 404
}

script:pre-request {
  const { validateDependency } = require('./utils');
  validateDependency(bru, 'firstStudentSchoolAssociationUniqueId', '01 - Check first StudentSchoolAssociation is valid', { actionHint: 'Ensure you ran the first certification scenario successfully before continuing.' });
}

script:post-response {
  const { wipeVars } = require('./utils');
  const entityName = 'StudentSchoolAssociation';
  // On successful deletion verification, wipe cached vars tied to the first association.
  if(res.status  === 404) {
    wipeVars(bru, [
      'firstStudentSchoolAssociationUniqueId',
      'firstStudentSchoolAssociationEntryDate',
      'firstStudentSchoolAssociationExitWithdrawDate'
    ], entityName, false);
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
